<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/elc_iv_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_elc_ic_switch"
        tools:ignore="VectorDrawableCompat" />


    <com.example.elcapplication.widget.Anchor
        android:tag="sw-l"
        android:id="@+id/elc_anchor_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/elc_iv_sw"
        app:layout_constraintStart_toStartOf="@+id/elc_iv_sw"
        app:layout_constraintTop_toTopOf="@+id/elc_iv_sw">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:text="o"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp" />

    </com.example.elcapplication.widget.Anchor>


    <com.example.elcapplication.widget.Anchor
        android:tag="sw-r"
        android:id="@+id/elc_anchor_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/elc_iv_sw"
        app:layout_constraintEnd_toEndOf="@id/elc_iv_sw"
        app:layout_constraintTop_toTopOf="@+id/elc_iv_sw">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="2dp"
            android:text="o"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />

    </com.example.elcapplication.widget.Anchor>


</androidx.constraintlayout.widget.ConstraintLayout>